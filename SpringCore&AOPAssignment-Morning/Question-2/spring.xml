<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING/DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans> <!-- global- default-init-method="onInit" default-destroy-method="onCleanup" -->
  
  <bean id="triangle" class="com.au.spring.Triangle" init-method="onInit" destroy-method="onCleanup">  
    <!--<property name="PointA" ref="PointA"/>
    <property name="PointB" ref="PointB"/>
    <property name="PointC" ref="PointC"/>-->
  </bean>
  
   <bean id="rectangle" class="com.au.spring.Rectangle">
   </bean>
  
  <!-- Use of .properties file  -->
  <bean id="PointA" class="com.au.spring.Point">
     <property name="x" value="${pointA.pointX}"/>
     <property name="y" value="${pointA.pointY}"/>
  </bean>
 
  
  <bean id="PointB" class="com.au.spring.Point">
       <property name="x" value="${pointA.pointX}"/>
       <property name="y" value="${pointA.pointY}"/>
  </bean>
  
  <bean id="PointC" class="com.au.spring.Point">
        <property name="x" value="${pointA.pointX}"/>
        <property name="y" value="${pointA.pointY}"/>
  </bean>
  
  
  
  <bean id="P1" class="com.au.spring.Point">
     	<property name="x" value="${P1.pointX}"/>
     	<property name="y" value="${P1.pointY}"/>
  
  </bean>
  <bean id="P2" class="com.au.spring.Point">
     	<property name="x" value="${P2.pointX}"/>
     	<property name="y" value="${P2.pointY}"/>
  </bean>
  <bean id="P3" class="com.au.spring.Point">
     	<property name="x" value="${P3.pointX}"/>
     	<property name="y" value="${P3.pointY}"/>
  </bean>
   
  <bean id="P4" class="com.au.spring.Point">
     	<property name="x" value="${P4.pointX}"/>
     	<property name="y" value="${P4.pointY}"/>
   </bean>
  
  <!-- Own class which implements BeanFactoryPostProcessor -->
  <bean class="com.au.spring.MyBeanFactoryPP"> </bean>
  
  <!-- Externalize properties -->
  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
     <property name="locations" value="pointsConfig.properties">
     </property>
  </bean>
  
  <!-- @Autowired annotation is a postprocessor -->
  <bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"></bean>
  
</beans>